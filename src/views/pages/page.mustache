{{>partials/header}}

{{#banner}}
<section class="banner" style="background-image: url('{{background}}')">{{title}}</section>
<h2>{{title}} disponíveis para adoção</h2>
{{/banner}}

<div class="container list">

{{#petList}}
    <div class="item">
        <img src="images/{{image}}" class="item--image" />
        <div class="item--name">{{name}}</div>
        <div class="item--color">{{color}}</div>
        <div class="item--genre">{{sex}}</div>
    </div>
    {{/petList}}
    
    
</div>
{{^petList}}
    <div class="container no-list">
    <h2>Nao ha animais disponiveis nessas condicoes</h2>
    </div>
    {{/petList}}
{{>partials/footer}}